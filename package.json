{
  "name": "neos-media-ui",
  "version": "1.0.0",
  "license": "GNU GPLv3",
  "private": true,
  "engines": {
    "node": "14"
  },
  "scripts": {
    "postinstall": "patch-package",
    "lint": "eslint 'Resources/Private/JavaScript/**/*.{js,jsx,ts,tsx}'",
    "test": "testcafe",
    "dev": "yarn workspace backend-module run dev",
    "watch": "concurrently -k \"yarn watch:module\" \"yarn watch:editor\"",
    "watch:module": "yarn workspace backend-module run watch",
    "watch:editor": "yarn workspace asset-editor run watch",
    "build": "yarn workspaces run build",
    "build:module": "yarn workspace backend-module run build",
    "build:editor": "yarn workspace asset-editor run build",
    "test:github-actions": "xvfb-run --server-args=\"-screen 0 1280x720x24\" yarn testcafe chrome"
  },
  "browserslist": [
    "> 1%",
    "Last 2 versions"
  ],
  "workspaces": [
    "Resources/Private/JavaScript/*"
  ],
  "devDependencies": {
    "@neos-project/eslint-config-neos": "*",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testcafe": "^0.2.1"
  }
}
