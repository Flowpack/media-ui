{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "node",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "skipLibCheck": true,
    "target": "ES2019",
    "typeRoots": [
      "./packages/core/typings",
      "./packages/asset-usage/typings",
      "./packages/asset-tags/typings",
      "./packages/asset-collections/typings",
      "./packages/asset-variants/typings",
      "./packages/asset-upload/typings",
      "./packages/asset-sources/typings",
      "./packages/concurrent-editing/typings"
    ],
    "paths": {
      "@media-ui/feature-asset-usage/src/*": ["./packages/asset-usage/src/*"],
      "@media-ui/feature-asset-variants/src/*": ["./packages/asset-variants/src/*"],
      "@media-ui/feature-concurrent-editing/src/*": ["./packages/concurrent-editing/src/*"],
      "@media-ui/feature-folders/src/*": ["./packages/folders/src/*"],
      "@media-ui/feature-clipboard/src/*": ["./packages/clipboard/src/*"],
    }
  },
  "include": [
    "./packages/**/*",
    "node_modules/@media-ui/feature-asset-usage/src/**/*",
    "node_modules/@media-ui/feature-asset-variants/src/**/*",
    "node_modules/@media-ui/feature-asset-collections/src/**/*",
    "node_modules/@media-ui/feature-asset-tags/src/**/*",
    "node_modules/@media-ui/feature-concurrent-editing/src/**/*",
    "node_modules/@media-ui/feature-clipboard/src/**/*",
    "node_modules/@media-ui/core/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true
  }
}
